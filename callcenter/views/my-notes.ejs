<!DOCTYPE html>
<html>
<head>
    <title>Мои заметки</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="<%= baseUrl %>/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <style>
        .note-row { display: grid; grid-template-columns: 100px 150px 100px 2fr 70px; border-bottom: 1px solid #eee; align-items: center; padding: 10px 15px; background: #fff; cursor: pointer; }
        .note-row:hover { background-color: #fcfcfc; }
        .actions-cell { display: flex; gap: 8px; justify-content: flex-end; opacity: 0.4; transition: opacity 0.2s; }
        .note-row:hover .actions-cell { opacity: 1; }
        .action-btn { background: none; border: none; cursor: pointer; padding: 4px; border-radius: 4px; color: #666; }
        .action-btn:hover { background-color: #eee; color: #333; }
        .action-btn.delete:hover { background-color: #fff0f0; color: #d32f2f; }
        .modal-overlay { display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.5); z-index: 2000; justify-content: center; align-items: center; }
        .modal-window { background: white; padding: 20px; border-radius: 8px; width: 500px; box-shadow: 0 4px 15px rgba(0,0,0,0.2); }
        textarea.modal-input { width: 100%; height: 120px; padding: 10px; border: 1px solid #ddd; border-radius: 6px; resize: vertical; font-family: 'Inter', sans-serif; margin-bottom: 15px; }
        .modal-footer { display: flex; justify-content: flex-end; gap: 10px; }
        .btn-sm { padding: 6px 12px; border-radius: 4px; cursor: pointer; border: none; font-size: 13px; }
    </style>
</head>
<body>
    <%- include('sidebar') %>
    <div class="content-wrapper" id="contentWrapper" style="background-color: #f4f6f8;">
        <div class="header-container" style="padding-top: 20px;"><h2 style="font-family: 'Inter'; font-size: 20px;">Мои заметки</h2></div>
        <div class="notes-container">
            <div class="notes-header-row" style="display: grid; grid-template-columns: 100px 150px 100px 2fr 70px; padding: 10px 15px; font-weight: 600; font-size: 12px; color: #999; border-bottom: 1px solid #ddd;">
                <div>Дата звонка</div><div>Телефон</div><div>Дата заметки</div><div>Заметка</div><div></div>
            </div>
            <div class="notes-list" id="notesList">
                <% function formatDate(d) { if(!d) return ''; const dt = new Date(d); return ('0'+dt.getDate()).slice(-2)+'.'+('0'+(dt.getMonth()+1)).slice(-2)+'.'+dt.getFullYear().toString().slice(-2); } %>
                <% notes.forEach(note => { %>
                <div class="note-row" id="note-row-<%= note.id %>" onclick="window.location.href='<%= baseUrl %>/details/<%= note.Call.id %>?tab=notes'">
                    <div class="cell-date"><%= formatDate(note.Call.date) %></div>
                    <div style="font-weight: 600;"><%= note.Call.phoneNumber %></div>
                    <div class="cell-date"><%= formatDate(note.updatedAt) %></div>
                    <div id="content-<%= note.id %>" style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis; padding-right: 10px;"><%= note.content %></div>
                    <div class="actions-cell" onclick="event.stopPropagation()">
                        <button class="action-btn" onclick="openEditModal(<%= note.id %>)"><svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path></svg></button>
                        <button class="action-btn delete" onclick="deleteNote(<%= note.id %>)"><svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path></svg></button>
                    </div>
                </div>
                <% }) %>
            </div>
        </div>
    </div>
    <div id="editModal" class="modal-overlay">
        <div class="modal-window">
            <div class="modal-title" style="margin-bottom:10px;font-weight:600;">Редактирование</div>
            <textarea id="modalText" class="modal-input"></textarea>
            <div class="modal-footer">
                <button class="btn-sm" style="background:#eee;" onclick="closeEditModal()">Отмена</button>
                <button class="btn-sm" style="background:#333;color:#fff;" onclick="saveEditedNote()">Сохранить</button>
            </div>
        </div>
    </div>
    <script>
        let currentNoteId = null;
        const modal = document.getElementById('editModal');
        const modalText = document.getElementById('modalText');
        function openEditModal(id) { 
            currentNoteId = id; 
            modalText.value = document.getElementById('content-' + id).innerText; 
            modal.style.display = 'flex'; 
        }
        function closeEditModal() { modal.style.display = 'none'; currentNoteId = null; }
        async function saveEditedNote() {
            try {
                const res = await fetch('<%= baseUrl %>/api/note/edit', { 
                    method: 'POST', 
                    headers: {'Content-Type': 'application/json'}, 
                    body: JSON.stringify({ noteId: currentNoteId, content: modalText.value }) 
                });
                if(res.ok) { 
                    document.getElementById('content-' + currentNoteId).innerText = modalText.value; 
                    closeEditModal(); 
                }
            } catch(e) { alert('Ошибка сети'); }
        }
        async function deleteNote(id) {
            if(!confirm('Удалить заметку?')) return;
            try {
                const res = await fetch('<%= baseUrl %>/api/note/delete', { 
                    method: 'POST', 
                    headers: {'Content-Type': 'application/json'}, 
                    body: JSON.stringify({ noteId: id }) 
                });
                if(res.ok) document.getElementById('note-row-' + id).remove();
            } catch(e) { alert('Ошибка сети'); }
        }
    </script>
</body>
</html>