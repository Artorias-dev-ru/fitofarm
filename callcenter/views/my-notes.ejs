<!DOCTYPE html>
<html>
<head>
    <title>Заметки</title>
    <link rel="stylesheet" href="<%= baseUrl %>/fonts.css">
    <style>
        :root { --bg-body: #E5E5E5;
 --card-shadow: 0 4px 12px rgba(0,0,0,0.05); }
        body { margin: 0; padding: 0;
 background-color: var(--bg-body); display: flex; font-family: 'Manrope', sans-serif; }
        .main-content { flex: 1;
 margin-left: 260px; padding: 40px; }
        .table-wrapper { width: 100%;
 border-spacing: 0; border-collapse: separate; }
        .thead-custom th { 
            background: transparent;
 color: #333; 
            font-weight: 700; 
            font-size: 14px; 
            padding: 10px 20px; 
            text-align: center;
 }
        .thead-inner { background: white; border-radius: 10px; padding: 12px; display: block; box-shadow: var(--card-shadow);
 }
        .data-row td { 
            background: white;
 padding: 20px; 
            font-size: 14px; 
            text-align: center; 
            vertical-align: middle;
            border: none;
 }
        .data-row { box-shadow: var(--card-shadow); cursor: pointer; transition: transform 0.2s;
 border-bottom: 1px solid gray;}
        .data-row:hover { transform: scale(1.01);
 }
        .tag { font-weight: 800; font-size: 11px; color: #333; display: block;
 margin: 2px 0; }
        .status { font-weight: 700; text-transform: lowercase;
 }
        .status-отработано { color: #27ae60;
 }
        .status-неотработано { color: #e74c3c;
}
        .status-нераспознано { color: #95a5a6;
 }
        .status-безстатуса { color: #aaa;
 }
        .note-text { text-align: left; max-width: 450px; line-height: 1.4; color: #000; font-weight: 500; 
            overflow-wrap: break-word; word-break: break-word; }
            .status-отработано { color: #27ae60 !important; }
.status-неотработано { color: #e74c3c !important; }
.status-нераспознано { color: #95a5a6 !important; }
.status-безстатуса { color: #aaa !important; }
    </style>
</head>
<body>
    <%- include('sidebar') %>
    <div class="main-content">
        <h2 style="margin: 0 0 30px 0; font-size: 28px;">Заметки</h2>
        <table class="table-wrapper">
            <thead class="thead-custom">
                <tr>
                    <th><span class="thead-inner">Дата диалога</span></th>
                    <th><span class="thead-inner">Активность</span></th>
                    <th><span class="thead-inner">Дата заметки</span></th>
                    <th><span class="thead-inner">Статус диалога</span></th>
                    <% if (user.role === 'superadmin') { %><th><span class="thead-inner">Автор</span></th><% } %>
                    <th><span class="thead-inner">Заметка</span></th>
                </tr>
            </thead>
            <tbody>
                <% notes.forEach(n => { %>
                <tr class="data-row" onclick="window.location.href='<%= baseUrl %>/details/<%= n.Call.id %>?tab=notes'">
                    <td><strong><%= moment(n.Call.date).format('DD.MM.YY') %></strong></td>
                    <td>
                        <% if (n.Call.rudeness > 0.5) { %><span class="tag">#агрессия</span><% } %>
                        <% if (n.Call.said_hello === false) { %><span class="tag">#приветствие</span><% } %>
                        <% if (n.Call.politeness < 0.5) { %><span class="tag">#вежливость</span><% } %>
                        <% if (n.Call.friendliness < 0.5) { %><span class="tag">#дружелюбие</span><% } %>
                        <% if (n.Call.manipulativeness > 0.5) { %><span class="tag">#манипуляция</span><% } %>
                    </td>
                    <td><%= moment(n.createdAt).format('DD.MM.YY') %></td>
                    <td class="status status-<%= n.Call.status ? n.Call.status.replace(/\s+/g, '') : 'безстатуса' %>">
                        <%= n.Call.status || 'без статуса' %>
                    </td>
                    <% if (user.role === 'superadmin') { %>
                        <td style="font-weight: 600; color: #666;"><%= n.User ? n.User.fullName : '—' %></td>
                    <% } %>
                    <td class="note-text"><%= n.content %></td>
                </tr>
                <% }) %>
            </tbody>
        </table>
        <% if (notes.length === 0) { %>
            <div style="text-align:center; padding: 60px; color: #999; background: white; border-radius: 15px; margin-top: 20px;">
                Список заметок пуст
            </div>
        <% } %>
    </div>
</body>
</html>