<!DOCTYPE html>
<html>
<head>
    <title>Мониторинг КЦ</title>
    <link rel="stylesheet" href="<%= baseUrl %>/fonts.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        :root {
            --bg-body: #E5E5E5;
            --orange-accent: #E86B35;
            --card-shadow: 0 4px 12px rgba(0,0,0,0.05);
            --font-main: 'Manrope', sans-serif;
            --font-sidebar: 'Myriad Pro', sans-serif;
        }
        body { margin: 0; padding: 0; background-color: var(--bg-body); display: flex; min-height: 100vh; font-family: var(--font-main); }
        .main-content { flex: 1; margin-left: 260px; padding: 30px 40px; transition: margin-left 0.3s ease; }
        .page-title { font-size: 24px; font-weight: 600; margin-bottom: 25px; font-family: var(--font-main); }
        .controls-row { display: flex; justify-content: space-between; align-items: center; margin-bottom: 25px; }
        .filter-group { display: flex; background: #fff; border-radius: 8px; padding: 4px; box-shadow: var(--card-shadow); }
        .filter-btn { border: none; background: transparent; padding: 8px 16px; font-size: 14px; font-weight: 500; color: #666; cursor: pointer; border-radius: 6px; font-family: var(--font-main); }
        .filter-btn.active { background-color: var(--orange-accent); color: white; }
        .view-switcher { display: flex; background: #fff; border-radius: 8px; overflow: hidden; box-shadow: var(--card-shadow); }
        .view-btn { border: none; background: transparent; padding: 10px 20px; font-size: 14px; cursor: pointer; color: #666; text-decoration: none; font-family: var(--font-main); }
        .view-btn.active { background: var(--orange-accent); color: white; }
        .dash-grid { display: grid; grid-template-columns: repeat(4, 1fr); gap: 20px; margin-bottom: 20px; }
        .stat-card { background: white; border-radius: 12px; padding: 24px; box-shadow: var(--card-shadow); display: flex; flex-direction: column; justify-content: space-between; min-height: 100px; font-family: var(--font-main); }
        .stat-card.large { text-align: center; justify-content: center; }
        .card-label { font-size: 14px; color: #666; margin-bottom: 8px; }
        .card-value { font-size: 42px; font-weight: 600; color: #333; line-height: 1; }
        .card-value.red { color: #D32F2F; }
        .chart-container { grid-column: span 2; grid-row: span 2; background: white; border-radius: 12px; padding: 50px; box-shadow: var(--card-shadow); height: 500px; position: relative; }
        .chart-title-dynamic { text-align: center; font-weight: 600; margin-bottom: 20px; color: #333; font-size: 16px; font-family: var(--font-sidebar); }
        .chart-arrow { position: absolute; top: 50%; transform: translateY(-50%); background: none; border: none; font-size: 24px; color: #ddd; cursor: pointer; transition: 0.2s; z-index: 10; }
        .chart-arrow:hover { color: var(--orange-accent); }
        .arrow-left { left: 15px; }
        .arrow-right { right: 15px; }
        .list-container { background: white; border-radius: 12px; padding: 20px; box-shadow: var(--card-shadow); width: 100%; box-sizing: border-box; font-family: var(--font-main); }
        .data-table { width: 100%; border-collapse: collapse; }
        .data-table th { text-align: center; color: #999; font-weight: 400; padding: 15px; font-size: 13px; }
        .data-table td { padding: 15px; border-bottom: 1px solid #f0f0f0; text-align: center; font-size: 14px; }
        .tag { padding: 3px 10px; border-radius: 4px; font-size: 11px; margin: 0 2px; display: inline-block; font-weight: 600; }
        .tag-error { background: #FFEBEE; color: #D32F2F; }
        .tag-aggression { background: #E8F5E9; color: #2E7D32; }
        .tag-greet { background: #FFF3E0; color: #E86B35; }
        #date-range-picker { display: none; }
    </style>
</head>
<body>
    <%- include('sidebar') %>
    <% 
        function getGradient(percent, low, high) {
            let hue = 120;
            if (percent <= low) hue = 120;
            else if (percent >= high) hue = 0;
            else {
                let range = high - low;
                let offset = percent - low;
                hue = 120 - (offset / range) * 120;
            }
            return `linear-gradient(90deg, #FFFFFF 50%, hsl(${hue}, 80%, 92%) 100%)`;
        }
    %>
    <div class="main-content" id="mainContent">
        <h2 class="page-title">Мониторинг</h2>
        <div class="controls-row">
            <div class="filter-group">
                <button class="filter-btn <%= activePeriod === 'today' ? 'active' : '' %>" onclick="setPeriod('today')">Сегодня</button>
                <button class="filter-btn <%= activePeriod === 'yesterday' ? 'active' : '' %>" onclick="setPeriod('yesterday')">Вчера</button>
                <button class="filter-btn <%= activePeriod === 'week' ? 'active' : '' %>" onclick="setPeriod('week')">Неделя</button>
                <button class="filter-btn <%= activePeriod === 'month' ? 'active' : '' %>" onclick="setPeriod('month')">Месяц</button>
                <button class="filter-btn" id="calendarBtn"><%= currentRange || 'Выбрать даты' %></button>
                <input type="text" id="date-range-picker">
            </div>
            <div class="view-switcher">
                <a href="?view=analytics" class="view-btn <%= currentView === 'analytics' ? 'active' : '' %>">Аналитика</a>
                <a href="?view=list" class="view-btn <%= currentView === 'list' ? 'active' : '' %>">Список</a>
                <a href="#" class="view-btn">Календарь</a>
            </div>
        </div>
        <% if (currentView === 'analytics') { %>
            <div class="dash-grid">
                <div class="stat-card large">
                    <div class="card-label">Всего звонков за период</div>
                    <div class="card-value"><%= stats.total %></div>
                </div>
                <div class="stat-card large">
                    <div class="card-label">Всего нарушений за период</div>
                    <div class="card-value red"><%= stats.violations %></div>
                </div>
                <div class="stat-card" style="background: <%= getGradient(stats.p_rudeness, config.threshold_low, config.threshold_high) %>">
                    <div class="card-label">Грубая ошибка</div>
                    <div class="card-value"><%= stats.rudeness %></div>
                </div>
                <div class="stat-card" style="background: <%= getGradient(stats.p_hello, config.threshold_low, config.threshold_high) %>">
                    <div class="card-label">Приветствие</div>
                    <div class="card-value"><%= stats.hello %></div>
                </div>
                <div class="chart-container">
                    <div id="chartTitle" class="chart-title-dynamic">Статистика звонков</div>
                    <button class="chart-arrow arrow-left" onclick="changeStat(-1)">&#10094;</button>
                    <button class="chart-arrow arrow-right" onclick="changeStat(1)">&#10095;</button>
                    <canvas id="callsChart"></canvas>
                </div>
                <div class="stat-card" style="background: <%= getGradient(stats.p_rudeness, config.threshold_low, config.threshold_high) %>">
                    <div class="card-label">Агрессия</div>
                    <div class="card-value"><%= stats.rudeness %></div>
                </div>
            </div>
        <% } else { %>
            <div class="list-container">
                <table class="data-table">
                    <thead><tr><th>Дата</th><th>Кол-во звонков</th><th>Активность</th><th>Заметка</th></tr></thead>
                    <tbody>
                        <% listData.forEach(row => { %>
                            <tr style="cursor: pointer" onclick="window.location.href='<%= baseUrl %>/details/<%= row.firstId %>'">
                                <td><strong><%= moment(row.date).format('DD.MM.YY') %></strong></td>
                                <td><%= row.count %></td>
                                <td>
                                    <% if(row.activities.size === 0) { %> — <% } else { %>
                                        <% row.activities.forEach(act => { %>
                                            <% 
                                                let tagClass = 'tag-greet';
                                                if (act === 'грубая ошибка') tagClass = 'tag-error';
                                                else if (act === 'агрессия') tagClass = 'tag-aggression';
                                            %>
                                            <span class="tag <%= tagClass %>"><%= act %></span>
                                        <% }) %>
                                    <% } %>
                                </td>
                                <td style="color: #666;">test</td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        <% } %>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script>
        const rawLabels = <%- chart.labels %>;
        const allDatasets = <%- chart.datasets %>;
        const statTypes = [
            { key: 'calls', label: 'Статистика звонков' },
            { key: 'violations', label: 'Статистика нарушений всего' },
            { key: 'no_hello', label: 'Статистика отсутствия приветствий' },
            { key: 'aggression', label: 'Статистика агрессии' }
        ];
        let currentStatIndex = 0;
        let myChart = null;
        const axisArrows = {
            id: 'axisArrows',
            afterDraw: (chart) => {
                const {ctx, scales: {x, y}} = chart;
                ctx.save();
                ctx.fillStyle = '#333';
                ctx.strokeStyle = '#333';
                ctx.lineWidth = 1;
                ctx.beginPath();
                ctx.moveTo(x.left, y.top);
                ctx.lineTo(x.left - 5, y.top + 10);
                ctx.lineTo(x.left + 5, y.top + 10);
                ctx.fill();
                ctx.beginPath();
                ctx.moveTo(x.right, y.bottom);
                ctx.lineTo(x.right - 10, y.bottom - 5);
                ctx.lineTo(x.right - 10, y.bottom + 5);
                ctx.fill();
                ctx.restore();
            }
        };
        function initChart(index) {
            const canvas = document.getElementById('callsChart');
            if (!canvas) return;
            const ctx = canvas.getContext('2d');
            const type = statTypes[index];
            document.getElementById('chartTitle').innerText = type.label;
            if (myChart) myChart.destroy();
            myChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: rawLabels,
                    datasets: [{
                        data: allDatasets[type.key],
                        borderColor: '#333',
                        borderWidth: 2,
                        tension: 0,
                        fill: false,
                        pointRadius: 0
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    layout: { padding: { right: 20, top: 20 } },
                    plugins: { legend: { display: false } },
                    scales: {
                        y: { beginAtZero: true, grid: { color: '#f0f0f0' }, border: { display: true }, ticks: { font: { family: 'Myriad Pro', size: 12 } } },
                        x: { grid: { display: false }, border: { display: true }, ticks: { font: { family: 'Myriad Pro', size: 12 } } }
                    }
                },
                plugins: [axisArrows]
            });
        }
        function changeStat(dir) {
            currentStatIndex = (currentStatIndex + dir + statTypes.length) % statTypes.length;
            initChart(currentStatIndex);
        }
        document.addEventListener('DOMContentLoaded', () => { initChart(0); });
        function setPeriod(p) { window.location.href = '?view=<%= currentView %>&period=' + p; }
        const fp = flatpickr("#date-range-picker", { mode: "range", onClose: (dates) => { if(dates.length === 2) window.location.href = '?view=<%= currentView %>&startDate=' + dates[0].toISOString().split('T')[0] + '&endDate=' + dates[1].toISOString().split('T')[0]; } });
        document.getElementById('calendarBtn').onclick = () => fp.open();
    </script>
</body>
</html>